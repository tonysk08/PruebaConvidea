            <div class="container">
                <div class="jumbotron">
                    <h1 class="display-3">Agregar un nuevo auto</h1>
                </div>

                <form action="/cars/save" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Placa del auto</label>
                            <input type="text" class="form-control" id="inputEmail4" name="plateN">
                        </div>
                        <div class="form-group col-md-4">
                            <label >Numero del chasis</label>
                            <input type="text" class="form-control" id="inputPassword4" name="chassisN">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Numero del chasis</label>
                            <input type="text" class="form-control" id="inputPassword4" name="motorN">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Marca del auto(Fabricante)</label>
                            <input type="text" class="form-control" id="inputAddress" placeholder="toyota,nissan,etc..." name="manufacturer">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Modelo</label>
                            <input type="text" class="form-control" id="inputAddress" placeholder="modelo" name="model">
                        </div>
                        <div class="form-group col-md-4">
                            <label>a√±o del auto</label>
                            <input type="number" class="form-control" id="inputAddress" placeholder="2018-2021" name="year">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Capacidad de pasajeros</label>
                            <input type="number" class="form-control" id="inputAddress" placeholder="" name="capacity">
                        </div>
                        <div class="form-group col-md-4">
                            <label>combustible</label>
                            <input type="text" class="form-control" id="inputAddress" placeholder="" name="fuel">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Tipo de traansmision</label>
                            <input type="text" class="form-control" id="inputAddress" placeholder="" name="gearbox">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Costo por dia</label>
                        <input type="number" class="form-control" id="inputAddress2" name="costXday">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                </form>
            </div>
        </div>

            

